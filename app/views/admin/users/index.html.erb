<%= render :partial => "menu" %>

<% if @users.blank? %>
  <div class="well">
    There is currently no user!
  </div>
<% else %>  
  <table class="table table-striped">
      <tr>
        <th>Username</th>
        <th>Name</th>
        <th>Status</th>
        <th>Admin</th>
        <th></th>
      </tr>
    <% for user in @users %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.name %></td>
        <td><%= user.active? ? 'Active' : '' %></td>
        <td><%= user.admin? ? 'Yes' : '' %></td>
        <td>
          <%= link_to "edit", edit_admin_user_path(user), class: 'btn btn-mini' %>
          <%= link_to "delete", admin_user_path(user), class: 'btn btn-mini btn-danger', method: 'delete', confirm: "Are you sure?" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>